<Window x:Class="Teachers.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:Components;assembly=Components"
        xmlns:vm="clr-namespace:Teachers.Desktop.ViewModels"
        xmlns:m="clr-namespace:Teachers.Models;assembly=Teachers.Models"

        Title="MainWindow"

        Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate x:Key="Template_ItemOfTeachers"
                      DataType="{x:Type TypeName=m:Teacher}">
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1} {2}">
                        <Binding Path="LastName"/>
                        <Binding Path="FirstName"/>
                        <Binding Path="Patronymic"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Path=Teachers}"
                 SelectedItem="{Binding Path=SelectedTeacher}"
                 SelectionMode="Single"
                 ItemTemplate="{StaticResource ResourceKey=Template_ItemOfTeachers}"
                 Grid.Column="0"/>

        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <c:InputComponent Label="ID"
                                  Value="{Binding Path=InputId, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsReadOnly="True"/>
                <c:InputComponent Label="Фамилия"
                                  Value="{Binding Path=InputLastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <c:InputComponent Label="Имя"
                                  Value="{Binding Path=InputFirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <c:InputComponent Label="Отчество"
                                  Value="{Binding Path=InputPatronymic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <c:InputComponent Label="Телефон"
                                  Value="{Binding Path=InputPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <c:InputComponent Label="Факультет"
                                  Value="{Binding Path=InputFaculty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Сохранить"/>
                <Button Content="Удалить"/>
                <Button Content="Очистить"
                        Command="{Binding Path=CommandClear}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
